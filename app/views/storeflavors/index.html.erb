<p id="notice"><%= notice %></p>

<h1>Store Flavors</h1>
<%= link_to 'New Store Flavor', new_storeflavor_path, :style => "position:absolute; TOP:23px; LEFT:700px; ", :class => "btn btn-info"%>
<table class="table table-striped" style="font-size:60%;">
  <thead>
    <tr>
      <th>Store</th>
      <th>Flavor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @storeflavors.each do |storeflavor| %>
      <tr>
        <td><%= storeflavor.store_id %></td>
        <td><%= storeflavor.flavor_id %></td>
        <td><%= link_to 'Show', storeflavor %></td>
        <td><%= link_to 'Edit', edit_storeflavor_path(storeflavor) %></td>
        <td><%= link_to 'Destroy', storeflavor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<% if @storeflavors.length == 0 %>
  <p> No store flavores created yet!</p>
<% end %>
<br>


