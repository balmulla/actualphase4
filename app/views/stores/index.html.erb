<p id="notice"><%= notice %></p>

<h1>Stores</h1>
<%= link_to 'New Store', new_store_path, :style => "position:absolute; TOP:23px; LEFT:700px; ", :class => "btn btn-info" %>
<table class="table table-striped">
  <thead>
    <tr>
        <th>name</th>
        <th>street</th>
        <th>city</th>
        <th>state</th>
        <th>zip</th>
        <th>phone</th>
        <th>latitude</th>
        <th>longitude</th>
        <th>active</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.state %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.latitude %></td>
        <td><%= store.longitude %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


