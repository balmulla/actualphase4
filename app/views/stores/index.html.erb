<p id="notice"><%= notice %></p>

<h1>Stores</h1>
<% @role = nil %>
<% if logged_in? %>
  <% @role = current_user_role %>
<% end %>
<% if @role == "admin" %>
<%= link_to 'New Store', new_store_path, :style => "position:absolute; TOP:23px; LEFT:700px; ", :class => "btn btn-info" %>
<% end %>

<div class="dropdown">
    <button class="dropbtn">filters</button>
    <div class="dropdown-content">
      <a href="<%= stores_path(:active => true) %>">Active</a>
      <a href="<%= stores_path(:inactive => true) %>">Inactive</a>
      <a href="<%= stores_path(:alphabetical => true) %>">Alphabetical</a>
    </div>
  </div>
<table class="table table-striped" style="font-size:60%;">
  <thead>
    <tr>
        <th>store id</th>
        <th>name</th>
        <th>street</th>
        <th>city</th>
        <th>state</th>
        <th>zip</th>
        <th>phone</th>
        <th>latitude</th>
        <th>longitude</th>
        <th>active</th>
        <th></th>
        <% if @role == "admin" %>
        <th></th>
        <th></th>
        <% end %>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.id %></td>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.state %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.latitude %></td>
        <td><%= store.longitude %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store %></td>
        <% if @role == "admin" %>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @stores.length == 0 %>
  <p> No stores created yet!</p>
<% end %>
<br>


